<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F1ECC3"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/simpleListView"
        android:layout_width="fill_parent"
        android:layout_height="484dp"
        android:divider="@color/black"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/dtL0View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#111E68"
        android:text="Current dt" />
    <TextView
        android:id="@+id/tempL0View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#111E68"
        android:text="Current Temperature" />
    <TextView
        android:id="@+id/feels_likeL0View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#111E68"
        android:text="Currently feels like" />
    <TextView
        android:id="@+id/humidityL0View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#111E68"
        android:text="Current humidity" />

    <!--<ListView
        android:id="@+id/simpleListView"
        android:layout_width="fill_parent"
        android:layout_height="516dp"
        android:divider="@color/material_blue_grey_800"
        android:dividerHeight="1dp" />-->

    <TextView
        android:id="@+id/dtL1View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#111E68" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#111E68"
            android:text="Renuka Seepersad Z23375879" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="76dp"

            android:layout_alignParentBottom="true"
            app:backgroundTint="#233078"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_nav_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
</LinearLayout>

